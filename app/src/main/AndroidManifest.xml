<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.witono.jogjaflight">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        >
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"></activity>
        <activity android:name=".view.AbsensiActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".view.MataKuliahActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".view.JadwalActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".view.NilaiActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>